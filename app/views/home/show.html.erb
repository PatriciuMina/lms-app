<a class="btn btn-primary btn-lg" <%= link_to 'Create user', new_user_path %></a>
<p></p>

<div>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Domain</th>
      <th>Role</th>

    </tr>
    </thead>
    <tbody>
    <% @users.each do |u| %>
      <tr>
        <th><%= u.id %></th>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= u.domain %></td>
        <td><%= u.role %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>